mixin box-pagination(options)

    nav(class="mt-3")
        ul(class="pagination")
            if(currentPage > 1)
                li(class="page-item")
                    button(class="page-link" button-pagination=currentPage-1) Previous

            - for (var i = 1; i <= totalPage; i++)
                li(class="page-item")
                    button(class="page-link" button-pagination=i) #{i}

            if(currentPage < totalPage)
                li(class="page-item")
                    button(class="page-link" button-pagination=currentPage+1) Next