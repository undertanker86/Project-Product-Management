doctype html
html
  head
    title #{pageTitle}
    link(rel="stylesheet"
    type="text/css"
    href="https://cdnjs.cloudflare.com/ajax/libs/file-upload-with-preview/6.1.2/style.css"
    )
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css")

    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/viewerjs/1.11.6/viewer.min.css")

    link(rel="stylesheet", href="/admin/css/style.css")

  body
    if(role.permissions.length > 0)
      - if (messages.success)
        <div class="alert alert-success alert-message" role="alert" alert-message>
            | #{messages.success}
        </div>
      - if (messages.error)
        div(
          class="alert alert-danger alert-message"
          alert-message
        ) #{messages.error}

      include ../partials/header.pug

      .body

        include ../partials/sider.pug

        .main
          block main


      
      
      script(src="https://code.jquery.com/jquery-3.6.0.min.js")

      script(src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js") 
      script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js")
      <script type="application/javascript" src= "/tinymce/tinymce.min.js"></script>
      <script type="application/javascript" src= "/admin/js/tinymce-config.js"></script>
       script(src="https://cdnjs.cloudflare.com/ajax/libs/viewerjs/1.11.6/viewer.min.js")
      <script type="module" src="https://cdn.jsdelivr.net/npm/emoji-picker-element@^1/index.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/file-upload-with-preview/6.1.2/index.iife.min.js"></script>
      script(src="/socket.io/socket.io.js")
      script(src="/admin/js/script.js")
      script(type="module" src="/admin/js/socket.js")
      script(src="/admin/js/socket.js")