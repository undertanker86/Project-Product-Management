extends ../../layouts/default.pug
include ../../mixins/box-filter.pug
include ../../mixins/box-pagination.pug
block main
  if(role.permissions.includes('products_create'))

    h1 #{pageTitle}
    form(
      action=`/${prefixAdmin}/products/create`
      method="POST"
      enctype="multipart/form-data"
    )
      div(class="form-group")
        label(for="title") Title
        input(
          type="text"
          class="form-control"
          id="title"
          name="title"
          required
        )
      div(class="form-group")
        label(for="category_id") Category
        select(
          class="form-control"
          id="category_id"
          name="category_id"
        )
          option(value="") -- Select category --
          each item in listCategory
            option(value=item.id) #{item.title}

        select(class = "form-group" id = "num-options")
            option(value="1") 1
            option(value="2") 2
            option(value="3") 3
        div.input-wrapper#input-container

        select(class = "form-group" id = "num-options-2")
            option(value="1") 1
            option(value="2") 2
            option(value="3") 3
            
        div.input-wrapper#input-container-2
      
        select(class = "form-group" id = "num-options-3")
            option(value="1") 1
            option(value="2") 2
            option(value="3") 3
            
        div.input-wrapper#input-container-3
            div(class="form-group")
        label(for="free_minutes") Number of Free Minutes
        input(
          type="number"
          class="form-control"
          id="free_minutes"
          name="free_minutes"
          value="0"
          min="0"
        )
        label(for="free_minutes_price") Price for Minutes
        input(
          type="number"
          class="form-control"
          id="free_minutes_price"
          name="free_minutes_price"
          value="0"
          min="0"
          required
        )

      div(class="form-group")
        label(for="free_sms") Number of Free SMS
        input(
          type="number"
          class="form-control"
          id="free_sms"
          name="free_sms"
          value="0"
          min="0"
        )
        label(for="free_sms_price") Price for SMS
        input(
          type="number"
          class="form-control"
          id="free_sms_price"
          name="free_sms_price"
          value="0"
          min="0"
          required
        )

      div(class="form-group")
        label(for="free_gb") Number of Free GB
        input(
          type="number"
          class="form-control"
          id="free_gb"
          name="free_gb"
          value="0"
          min="0"
        )
        label(for="free_gb_price") Price for GB
        input(
          type="number"
          class="form-control"
          id="free_gb_price"
          name="free_gb_price"
          value="0"
          min="0"
          required
        )

        
      div(class="form-group form-check form-check-inline")
        input(
          type="radio"
          class="form-check-input"
          id="featured1"
          name="featured"
          value="1"
        )
        label(for="featured1" class="form-check-label") Outstanding
      div(class="form-group form-check form-check-inline")
        input(
          type="radio"
          class="form-check-input"
          id="featured0"
          name="featured"
          value="0"
          checked
        )
        label(for="statusInActive" class="form-check-label") Not Outstanding

            
      div(class="form-group")
        label(for="desc") Description
        textarea(
          class="form-control"
          id="desc"
          name="description"
          rows="5"
          textarea-mce
        )
      div(class="form-group")
        label(for="price") Price
        input(
          type="number"
          class="form-control"
          id="price"
          name="price"
          value="0"
          min="0"
        )
      div(class="form-group")
        label(for="discount") % Discount
        input(
          type="number"
          class="form-control"
          id="discount"
          name="discountPercentage"
          value="0"
          min="0"
        )
      div(class="form-group")
        label(for="stock") Quantity
        input(
          type="number"
          class="form-control"
          id="stock"
          name="stock"
          value="0"
          min="0"
        )
      div(class="form-group" upload-image)
        label(for="thumbnail") Image
        input(
          type="file"
          class="form-control-file"
          id="thumbnail"
          name="thumbnail"
          accept = "image/*"
          upload-image-input
        )
        img(
          src=""
          class="img-preview"
          upload-image-preview 
        )
      div(class="form-group")
        label(for="position") Position
        input(
          type="number"
          class="form-control"
          id="position"
          name="position"
          placeholder="Auto Increase"
          min="1"
        )
      div(class="form-group form-check form-check-inline")
        input(
          type="radio"
          class="form-check-input"
          id="statusActive"
          name="status"
          value="active"
          checked
        )
        label(for="statusActive" class="form-check-label") Active
      div(class="form-group form-check form-check-inline")
        input(
          type="radio"
          class="form-check-input"
          id="statusInActive"
          name="status"
          value="inactive"
        )
        label(for="statusInActive" class="form-check-label") Inactive
      div(class="form-group")
        button(
          type="submit"
          class="btn btn-primary"
        ) Create Product