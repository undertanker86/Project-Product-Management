extends ../../layouts/default.pug

block main
  <div class="section-1">
    .container.my-5
      .row.justify-content-center
        .col-8
          h1(class="text-center") Create Account
          if(role.permissions.includes('accounts_create_customer'))
            form(
              action="/admin/account-users"
              method="POST"
              novalidate
            )
              // Full Name
              div(class="form-group")
                label(for="fullName") Full name
                input(
                  type="text"
                  class="form-control"
                  id="fullName"
                  name="fullName"
                  required
                  pattern="^[a-zA-Z\s]+$"
                  title="Full name must contain only letters and spaces."
                )

              // Email
              div(class="form-group")
                label(for="email") Email
                input(
                  type="email"
                  class="form-control"
                  id="email"
                  name="email"
                  required
                  title="Please enter a valid email address."
                )

              // Password
              div(class="form-group")
                label(for="password") Password
                input(
                  type="password"
                  class="form-control"
                  id="password"
                  name="password"
                  required
                  minlength="8"
                  title="Password must be at least 8 characters."
                )

              // Address
              div(class="form-group")
                label(for="address") Address
                input(
                  type="text"
                  class="form-control"
                  id="address"
                  name="address"
                  required
                  minlength="5"
                  title="Address must be at least 5 characters."
                )

              // Phone Number
              div(class="form-group")
                label(for="phoneNumber") Phone Number
                input(
                  type="tel"
                  class="form-control"
                  id="phoneNumber"
                  name="phoneNumber"
                  required
                  pattern="^\d{10}$"
                  title="Phone number must be exactly 10 digits."
                )

          
              // Submit Button
              div(class="form-group")
                button(
                  type="submit"
                  class="btn btn-primary btn-block"
                ) Create
