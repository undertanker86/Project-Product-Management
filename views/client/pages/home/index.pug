extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/product-item.pug

block main
  h1 Home
  .container.my-3
    +box-head("Outstanding products")
    .row
      each item in productsFeatured
        +product-item(item)
  
  
  .container.my-3
    +box-head("New products")
    .row
      each item in productsNew
        +product-item(item)
  
  .container.my-3
    +box-head("Discount products")
    .row
      each item in productsDiscount
        +product-item(item)
  
  .container.my-3
    +box-head("Recommend products")
    .row
      each item in productsChoose
        +product-item(item)