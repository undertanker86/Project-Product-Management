extends ../../layouts/default.pug

block main
  <div class="section-1">
    .container.my-5
      .row.justify-content-center
        .col-8
          h1(class="text-center") Register Account
          form(
            action="/user/register"
            method="POST"
          )
            // Full Name
            div(class="form-group")
              label(for="fullName") Full name
              input(
                type="text"
                class="form-control"
                id="fullName"
                name="fullName"
                required
              )

            // Email
            div(class="form-group")
              label(for="email") Email
              input(
                type="email"
                class="form-control"
                id="email"
                name="email"
                required
              )

            // Password
            div(class="form-group")
              label(for="password") Password
              input(
                type="password"
                class="form-control"
                id="password"
                name="password"
                required
              )

            // Address
            div(class="form-group")
              label(for="address") Address
              input(
                type="text"
                class="form-control"
                id="address"
                name="address"
                required
              )

            // Phone Number
            div(class="form-group")
              label(for="phoneNumber") Phone Number
              input(
                type="tel"
                class="form-control"
                id="phoneNumber"
                name="phoneNumber"
                required
                placeholder="Enter your phone number"
              )

            // Credit Card Fields
            // Accepted Credit Card Images
            div(class="credit-card-accepted")
              h2 Accepted Credit Cards
              img(src="/css/images/visa.png", alt="Visa", class="credit-card-img")
              img(src="/css/images/mastercard.png", alt="MasterCard", class="credit-card-img")

            div(class="form-group credit-card-container")
              label(for="creditCardNumber") Credit Card Number
              div(class="credit-card-input")
                input(
                  type="text"
                  class="form-control"
                  id="creditCardNumber"
                  name="creditCardNumber"
                  maxlength="19"
                  required
                  placeholder="1234 5678 9012 3456"
                )
                // Expiration Date & CVV
                div(class="expiration-cvv")
                  input(
                    type="text"
                    class="form-control exp-month"
                    name="expMonth"
                    maxlength="2"
                    required
                    placeholder="MM"
                  )
                  input(
                    type="text"
                    class="form-control exp-year"
                    name="expYear"
                    maxlength="2"
                    required
                    placeholder="YY"
                  )
                  input(
                    type="text"
                    class="form-control cvv"
                    name="cvv"
                    maxlength="3"
                    required
                    placeholder="CVV"
                  )

            // Submit Button
            div(class="form-group")
              button(
                type="submit"
                class="btn btn-primary btn-block"
              ) Register
