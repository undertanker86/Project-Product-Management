extends ../../layouts/default.pug

block main
  .container.my-5
    .row.justify-content-center
      .col-8
        h1(class="text-center") Login
        form(
          action="/user/login"
          method="POST"
        )
          div(class="form-group")
            label(for="email") Email
            input(
              type="email"
              class="form-control"
              id="email"
              name="email"
              required
            )
          div(class="form-group")
            label(for="password") Password
            input(
              type="password"
              class="form-control"
              id="password"
              name="password"
              required
            )

          .google-login-container
            a(href="/auth/google" class="btn btn-danger btn-google")
              i(class="fa-brands fa-google") 
              | Login with Google

          div(class="form-group")
            button(
              type="submit"
              class="btn btn-primary btn-block"
            ) Login

          a(href="/user/password/forgot") Forgot password?
