mixin item-product(item, nameClass)
    div(class=`product-item ${nameClass ? nameClass : ""}`)
                        div(class="product-item__image")
                            a(href="#")
                                img(src=item.thumbnail alt=title)
                        div(class="product-item__content")
                            h3(class="product-item__title")
                                a(href="#") #{item.title}
                            div(class="product-item__meta")
                                div(class="product-item__meta-item")
                                    span Giá»‘ng:
                                    strong #{item.title}
                                div(class="product-item__meta-dot")
                                div(class="product-item__meta-item")
                                    span Age:
                                    strong #{item.title}
                            div(class="product-item__price") #{item.title} 